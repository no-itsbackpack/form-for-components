{
  "name": "form-for-components",
  "version": "0.0.0",
  "description": "Core HTML components for form-for",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component && npm run flow-copy-source",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "prettier": "prettier --write --print-width 120 \"{demo/src,src,test}/**/*.js\"",
    "prettier-lint-staged": "prettier --write --print-width 120",
    "pretest": "npm run prettier",
    "flow": "flow",
    "flow-copy-source": "flow-copy-source src lib && flow-copy-source src es",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "preversion": "npm test",
    "version": "npm run build && git add package.json",
    "postversion": "git push && git push --tags"
  },
  "author": "Pedro Moreira",
  "homepage": "https://github.com/form-for/form-for-components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/form-for/form-for-components.git"
  },
  "bugs": {
    "url": "https://github.com/form-for/form-for-components/issues"
  },
  "keywords": [
    "react-component",
    "react",
    "reactjs",
    "form",
    "forms",
    "simple-form",
    "reactive"
  ],
  "peerDependencies": {
    "form-for": "^0.3.5",
    "react": "^15"
  },
  "devDependencies": {
    "flow-bin": "^0.57.3",
    "flow-copy-source": "^1.2.1",
    "form-for": "^0.3.5",
    "nwb": "0.19.x",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier-lint-staged",
      "git add"
    ]
  }
}
